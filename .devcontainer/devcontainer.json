{
	"name": "MZQC Python Development container",
	"dockerFile": "Dockerfile",
	"context": "..",
	"extensions": [
		"ms-python.python"
	],
	"settings": {
		"python.pythonPath": "/usr/local/bin/python"
	},
	"postCreateCommand": "sudo pip install -e git+'https://github.com/HUPO-PSI/mzQC@mzqc-pylib#egg=MZQC-0.0.1&subdirectory=pylib'",
	"runArgs": ["-u", "vscode"]
}
